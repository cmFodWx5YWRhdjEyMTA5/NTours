    <RelativeLayout
        android:id="@+id/rel"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_profile_circle"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_below="@id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/cardView"
        app:contentPadding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/userFirstName"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="@dimen/filter_heading" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightPrimary"
                android:textSize="@dimen/profile_data"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/userPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightPrimary"
                android:textSize="@dimen/profile_data"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/userRewardPoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightPrimary"
                android:textSize="@dimen/profile_data"
                android:layout_marginTop="5dp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cardView"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/txtEditProfile"
            android:textSize="@dimen/filter_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Edit Profile"
            android:layout_gravity="center_vertical|center_horizontal"
            android:drawableRight="@drawable/ic_navigation_arrow_right" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/cardView0"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/txtChangePassword"
            android:textSize="@dimen/filter_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Change Password"
            android:layout_gravity="center_vertical|center_horizontal"
            android:drawableRight="@drawable/ic_navigation_arrow_right" />

    </android.support.v7.widget.CardView>


</RelativeLayout>