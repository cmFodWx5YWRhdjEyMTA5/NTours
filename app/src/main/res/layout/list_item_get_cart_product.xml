<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <ImageView
            android:id="@+id/cartProductImage"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.50" />


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="2dp">

            <TextView
                android:id="@+id/cartProductTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightPrimary"
                android:textSize="@dimen/secondary_text_size"

                />

            <TextView
                android:id="@+id/cartProductPriceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"

                />

            <TextView
                android:id="@+id/cartProductTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.30"
            android:weightSum="0.30">


            <ImageView
                android:id="@+id/addQtyImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/ic_cart_add"
                android:layout_weight="0.10" />


            <TextView
                android:id="@+id/cartProductQty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:textColor="@color/colorGrey"
                android:gravity="center"
                android:textSize="@dimen/secondary_text_size"
                android:layout_weight="0.10" />


            <ImageView
                android:id="@+id/subtractQtyImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/ic_cart_subtract"
                android:layout_weight="0.10" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="0.20">

            <ImageView
                android:id="@+id/cartDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cart_delete"
                android:layout_gravity="right" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>