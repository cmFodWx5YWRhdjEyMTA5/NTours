<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:id="@+id/linearProductReview">

    <android.support.v7.widget.CardView
        android:layout_width="280dp"
        android:layout_height="180dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        android:background="@color/lightBlue"
        app:cardBackgroundColor="@color/lightBlue"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtProductReviewAuthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginRight="55dp" />


            <TextView
                android:id="@+id/txtProductReviewRating"
                android:layout_width="30dp"
                android:layout_height="23dp"
                android:background="@color/colorPrimary"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/txtProductReviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_below="@id/txtProductReviewAuthor"

                android:padding="5dp" />

            <TextView
                android:id="@+id/txtProductReviewDetail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="5dp"
                android:layout_below="@id/txtProductReviewDate"
                android:maxLines="3"

                />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>